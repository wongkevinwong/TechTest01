
@{
    ViewBag.Title = "Technical Test 01";
}

@model IEnumerable<TechTest01.Domain.Catalog.Product>

<h2>Random Product List</h2>

<table class="table table-striped" >
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
            <th>Slug</th>
            <th>Description</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tableBody">
        @foreach (var product in Model)
        {
            <tr>
            <td>@product.Name </td>
            <td><a class="btn btn-default" onclick="getDetail(@product.Id)">See Detail</a></td>
            <td>@product.Slug</td>
            <td>@product.Description</td>
            <td>@product.Price</td>
            <td><img src="@product.ImageUrl" title="@product.Name" /></td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="col-md-3">
        <a class="btn btn-primary" onclick="getAllProducts()">See all</a>
    </div>
</div>
<div id="result">

</div>

@section Scripts{
    <script src="~/Scripts/app/home.js"></script>  
}